<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/colorPrimaryBg</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/colorPrimaryBg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_vector</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

</resources>