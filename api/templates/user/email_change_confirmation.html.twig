{% extends 'base.html.twig' %}

{% block title %}Email change confirmation on {{ app_name }}{% endblock %}

{% block body %}
    <table class="body" data-made-with-foundation="">
        <tr>
            <td class="float-center" align="center" valign="top">
                <center data-parsed="">
                    <table class="spacer float-center">
                        <tbody>
                        <tr>
                            <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                        </tr>
                        </tbody>
                    </table>
                    <table align="center" class="container header float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <h1 class="text-center">Email change @ {{ app_name }}</h1>
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <table align="center" class="container body-border float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <h4>Hello {{ name }},</h4>
                                                        <p>
                                                            You have requested to change your email ({{ oldEmail }}) on {{ app_name }}.
                                                            Please click the button below to verify your new email address ({{ newEmail }}).
                                                        </p>

                                                        <table class="button expanded">
                                                            <tbody>
                                                            <tr>
                                                                <td>
                                                                    <table>
                                                                        <tbody>
                                                                        <tr>
                                                                            <td>
                                                                                <center>
                                                                                    <a href="{{ app_url }}/auth/change-email/{{ token }}"
                                                                                       align="center"
                                                                                       class="float-center">Activate new email</a></center>
                                                                            </td>
                                                                        </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </td>
                                                                <td class="expander"></td>
                                                            </tr>
                                                            </tbody>
                                                        </table>


                                                        <center data-parsed="">
                                                            <table align="center" class="menu float-center">
                                                                <tr>
                                                                    <td>
                                                                        <table>
                                                                            <tr>
                                                                                <th class="menu-item float-center"><a
                                                                                            href="{{ app_url }}">{{ app_url }}</a>
                                                                                </th>
                                                                            </tr>
                                                                        </table>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </center>
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="spacer">
                                    <tbody>
                                    <tr>
                                        <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </center>
            </td>
        </tr>
    </table>
{% endblock %}