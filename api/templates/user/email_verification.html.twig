{% extends 'base.html.twig' %}

{% block title %}Email verification on {{ app_name }}{% endblock %}

{% block body %}
    <table class="body" data-made-with-foundation="">
        <tr>
            <td class="float-center" align="center" valign="top">
                <center data-parsed="">
                    <table class="spacer float-center">
                        <tbody>
                        <tr>
                            <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                        </tr>
                        </tbody>
                    </table>
                    <table align="center" class="container header float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <h1 class="text-center">Welcome to {{ app_name }}</h1>
                                                        {% include '_links.html.twig' %}
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <table align="center" class="container body-border float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <center data-parsed=""><img
                                                                    src="{{ email.image('@assets_img/email-bg.png') }}"
                                                                    align="center" class="float-center" alt="cover photo"></center>
                                                        <table class="spacer">
                                                            <tbody>
                                                            <tr>
                                                                <td height="16px"
                                                                    style="font-size:16px;line-height:16px;">&#xA0;
                                                                </td>
                                                            </tr>
                                                            </tbody>
                                                        </table>
                                                        <h4>Hello {{ name }}, welcome to {{ app_name }}!</h4>

                                                        <p>Natai Diary is a unique journaling app that comes with
                                                            AI-powered recommendations based on your notes. Receive
                                                            mental health support to improve your well-being.</p>

                                                        <table class="button expanded">
                                                            <tbody>
                                                            <tr>
                                                                <td>
                                                                    <table>
                                                                        <tbody>
                                                                        <tr>
                                                                            <td>
                                                                                <center>
                                                                                    <a href="{{ app_url }}/confirm-email/{{ token }}"
                                                                                       align="center"
                                                                                       class="float-center">Confirm
                                                                                        Email</a></center>
                                                                            </td>
                                                                        </tr>
                                                                        </tbody>
                                                                    </table>
                                                                </td>
                                                                <td class="expander"></td>
                                                            </tr>
                                                            </tbody>
                                                        </table>

                                                        {% include '_url.html.twig' %}
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="spacer">
                                    <tbody>
                                    <tr>
                                        <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </center>
            </td>
        </tr>
    </table>
{% endblock %}