{% extends 'base.html.twig' %}

{% block title %}New Feedback{% endblock %}

{% block body %}
    <table class="body" data-made-with-foundation="">
        <tr>
            <td class="float-center" align="center" valign="top">
                <center data-parsed="">
                    <table class="spacer float-center">
                        <tbody>
                        <tr>
                            <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                        </tr>
                        </tbody>
                    </table>
                    <table align="center" class="container header float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <h1 class="text-center">New Feedback</h1>
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <table align="center" class="container body-border float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <h4>Hello,</h4>
                                                        <p>
                                                            You have received a new feedback:
                                                        </p>

                                                        <p>
                                                            {% if feedback.user %}
                                                                <strong>From:</strong>{{ feedback.user.name }} {{ feedback.user.email }}<br>
                                                            {% endif %}

                                                            <strong>Stars:</strong> {{ feedback.stars }}<br>
                                                            <strong>Content:</strong> {{ feedback.content }}<br>
                                                        </p>
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="spacer">
                                    <tbody>
                                    <tr>
                                        <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </center>
            </td>
        </tr>
    </table>
{% endblock %}
